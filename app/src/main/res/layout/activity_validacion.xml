<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueD"
    tools:context=".validacionActivity"
    android:id="@+id/validacion">

    <ImageView
        android:id="@+id/circulo1"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:src="@drawable/circulos"
        android:contentDescription="@string/trescirculos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/circulo2"
        app:layout_constraintBottom_toTopOf="@+id/mensaje"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginEnd="-20dp"
        android:layout_marginTop="-300dp"/>

    <ImageView
        android:id="@+id/circulo2"
        android:layout_width="320dp"
        android:layout_height="420dp"
        android:src="@drawable/circulos"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/trescirculos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/circulo1"
        app:layout_constraintTop_toBottomOf="@+id/mensaje"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginEnd="-90dp"
        android:layout_marginTop="300dp" />

    <TextView
        android:id="@+id/mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exitoso"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

