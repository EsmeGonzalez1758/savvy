<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueD"
    tools:context=".inicio">

    <ImageView
        android:id="@+id/rectangulo1"
        android:layout_width="165dp"
        android:layout_height="520dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="-120dp"
        android:rotation="130"
        android:src="@drawable/rectangulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rectangulo2"
        android:layout_width="165dp"
        android:layout_height="520dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="-30dp"
        android:rotation="130"
        android:src="@drawable/rectangulo1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/times"
        android:text="SAVVY"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="310dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"  />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="264dp"
        android:layout_height="242dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="-20dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@id/mensaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

