<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <RelativeLayout
        android:layout_width="305dp"
        android:layout_height="213dp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="90dp"
        tools:ignore="MissingConstraints"
        >

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="305dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REFRIGERACIÓN"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="342dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="327dp"
        android:layout_height="310dp"
        android:background="@drawable/rectangulo1"
        android:elevation="15dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="403dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="28dp"
            android:text="Objetivo de Refrigeración"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="254dp"
            android:layout_height="257dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Analiza e interpreta el funcionamiento
de los sistemas de refrigeración de
vapor por compresión así como
selección de los equipos que los
componen con el objeto de determinar
sus indicadores fundamentales."
            android:textSize="17dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="-75dp"
            android:backgroundTint="@color/red"
            android:text="Empezar"
            app:cornerRadius="20dp">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="384dp"
        android:layout_height="60dp"
        android:background="@drawable/menu"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="45dp">
        <ImageButton
            android:id="@+id/iconLeft"
            android:layout_width="371dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/menu"
            android:contentDescription="Left Icon"
            android:src="@drawable/context" />

        <ImageButton
            android:id="@+id/iconCenter"
            android:layout_width="371dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/menu"
            android:contentDescription="Center Icon"
            android:src="@drawable/perfil" />

        <ImageButton
            android:id="@+id/iconRight"
            android:layout_width="371dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/menu"
            android:contentDescription="Right Icon"
            android:src="@drawable/savvy_info" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>