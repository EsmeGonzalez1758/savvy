<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#d13169" /> <!-- Color negro translúcido para la sombra -->
            <corners android:radius="500dp" /> <!-- Esquinas redondeadas como el círculo -->
        </shape>
    </item>

    <item android:left="5dp" android:top="5dp" > <!-- Desplazamiento de la sombra -->
        <shape>
            <solid android:color="#ED79AB" /> <!-- Color rosa del círculo -->
            <corners android:radius="500dp" /> <!-- Esquinas redondeadas -->
        </shape>
    </item>
</layer-list>
