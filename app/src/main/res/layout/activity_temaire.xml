<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1099"
    android:background="@color/blue">


    <!--Titulo "Aire acondicionado"-->

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACONDICIONADO"
        android:textColor="@color/white"
        android:textSize="29dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="65dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AIRE"
        android:textColor="@color/white"
        android:textSize="29dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="26dp" />

    <LinearLayout
        android:id="@+id/contenido"
        android:layout_width="398dp"
        android:layout_height="845dp"
        android:background="@color/temario"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="132dp">

        <Button
            android:id="@+id/button"
            android:layout_width="341dp"
            android:layout_height="47dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/temas"
            android:gravity="center_vertical|start"
            android:text="Tablas y cartas psicométricas."
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/button2"
            android:layout_width="346dp"
            android:layout_height="53dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="19dp"
            android:backgroundTint="@color/temas"
            android:gravity="center_vertical|start"
            android:text="Proceso de enfriamiento sensible"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:layout_width="346dp"
            android:layout_height="78dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="19dp"
            android:backgroundTint="@color/temas"
            android:gravity="center_vertical|start"
            android:text="Proceso de calentamiento sensible"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button5"
            android:layout_width="346dp"
            android:layout_height="78dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="19dp"
            android:backgroundTint="@color/temas"
            android:gravity="center_vertical|start"
            android:text="Proceso de enfriamiento deshumidificación"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button6"
            android:layout_width="346dp"
            android:layout_height="80dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="19dp"
            android:backgroundTint="@color/temas"
            android:gravity="center_vertical|start"
            android:text="Proceso de enfriamiento-humidificación"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button7"
            android:layout_width="346dp"
            android:layout_height="87dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="19dp"
            android:backgroundTint="@color/temas"
            android:gravity="center_vertical|start"
            android:text="Proceso de calentamientodeshumidificación"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button8"
            android:layout_width="346dp"
            android:layout_height="87dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="19dp"
            android:backgroundTint="@color/temas"
            android:gravity="center_vertical|start"
            android:text="Proceso de calentamientohumidificación"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button9"
            android:layout_width="346dp"
            android:layout_height="53dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="19dp"
            android:backgroundTint="@color/temas"
            android:text="Cargas termicas"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button10"
            android:layout_width="346dp"
            android:layout_height="53dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="19dp"
            android:backgroundTint="@color/temas"
            android:text="Evaluación final"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="32dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="384dp"
        android:layout_height="60dp"
        android:background="@drawable/menu"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="45dp">

    <ImageButton
        android:id="@+id/iconLeft"
        android:layout_width="371dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:src="@drawable/context"
        android:contentDescription="Left Icon"
        android:layout_gravity="center"
        android:background="@color/menu"/>

        <ImageButton
            android:id="@+id/iconCenter"
            android:layout_width="371dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/perfil"
            android:contentDescription="Center Icon"
            android:layout_gravity="center"
            android:background="@color/menu"/>

        <ImageButton
            android:id="@+id/iconRight"
            android:layout_width="371dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/savvy_info"
            android:contentDescription="Right Icon"
            android:layout_gravity="center"
            android:background="@color/menu"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>