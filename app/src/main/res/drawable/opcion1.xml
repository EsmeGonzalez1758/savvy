<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape>
            <solid android:color="#F48FB1" /> <!-- Color negro translúcido para la sombra -->
            <corners android:radius="500dp" /> <!-- Esquinas redondeadas como el círculo -->
        </shape>
    </item>

    <!-- Círculo principal -->
    <item android:left="5dp" android:top="5dp" > <!-- Desplazamiento de la sombra -->
        <shape>
            <solid android:color="#E14181" /> <!-- Color rosa del círculo -->
            <corners android:radius="500dp" /> <!-- Esquinas redondeadas -->
        </shape>
    </item>
</layer-list>

